{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jpp",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#function"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#number"
    },
    {
      "include": "#label"
    },
	{
		"include": "parameter"
	}
  ],
  "repository": {
    "keywords": {
      "patterns": [{
        "name": "keyword.control.jpp",
        "match": "(ret|#)"
      }]
    },
    "parameter": {
      "patterns": [
        {
          "name": "variable.parameter.jpp",
          "match": "\b[a-zA-Z_][a-zA-Z0-9_]*\b"
        }
      ]
    },
    "label": {
      "patterns": [{
        "name": "entity.name.label.jpp",
        "match": ":\\s.*"
      }]
    },
    "number": {
      "patterns": [{
        "name": "constant.numeric.jpp",
        "match": "\\b\\d+\\b"
      }]
    },
    "function": {
      "patterns": [{
        "name": "keyword.functions.jpp",
        "match": "(mov|addi|subi|muli|divi|shri|addf|subf|mulf|divf|and|or|xor|not|shl|shr|itof|ftoi|test|lti|eqi|gti|ltf|eqf|gtf|jmp|call|ret|exit|alloc|free)"
      }]
    },
    "comment": {
      "patterns": [{
        "name": "comment.line.double-slash.jpp",
        "match": "//.*"
      }]
    },
    "variable": {
      "patterns": [{
        "name": "variable.other.jpp",
        "match": "[a-zA-Z_][a-zA-Z0-9_]*"
      }]
    }
  },
  "scopeName": "text.jpp"
}
